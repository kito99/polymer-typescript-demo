{
  "compileOnSave": true,
  "compilerOptions": {
    "target": "es5",
    "noImplicitAny": false,
    "removeComments": true,
    "preserveConstEnums": true,
    "sourceMap": true,
    "experimentalDecorators": true,
    "listFiles": true,
    "noEmitOnError": true
  },
  "include": [
    "src/**/.ts"
  ]
}
