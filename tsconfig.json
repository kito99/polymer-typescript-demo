{
  "compileOnSave": true,
  "compilerOptions": {
    "target": "es2016",
    "noImplicitAny": false,
    "removeComments": true,
    "preserveConstEnums": true,
    "sourceMap": true,
    "experimentalDecorators": true,
    "listFiles": true,
    "noEmitOnError": true,
    "emitDecoratorMetadata": true
  },
  "include": [
    "src/**/*.ts",
    "bower_components/polymer-decorators/polymer-decorators.d.ts",
    "bower_components/polymer/types/*.d.ts"
  ],
  "exclude": [
    "bower_components/polymer/lib/elements/custom-style.d.ts"
  ]
}
